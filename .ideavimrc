" set leader key
nnoremap <SPACE> <Nop>
let mapleader = " "

" search
set hlsearch
set incsearch
set smartcase
set ignorecase
set so=5

" plugins
set easymotion
set surround


" basic key mapping
nnoremap L $
nnoremap H ^
vnoremap L $
vnoremap H ^
nnoremap ; :

" clear the highlighted search result
nnoremap <Leader>sc :nohlsearch<CR>


" Insert mode shortcut
inoremap <C-h> <Left>
inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-l> <Right>
inoremap <C-a> <Home>
inoremap <C-e> <End>
inoremap <C-d> <Delete>


" copy and paste
noremap <Leader>y "*y
noremap <Leader>p "*p
noremap <Leader>P "0p
vnoremap Y "+y


" Quit normal mode
nnoremap <Space>q  :wq!<CR>
nnoremap <Space>Q  :qa!<CR>

" edit vimrc 编辑ideavim配置文件
nnoremap <leader>ve :e ~/.ideavimrc<CR>
nnoremap <leader>vw :w!<CR>
nnoremap <leader>vs :source ~/.ideavimrc<CR>


" Tab operation
" 后退
nnoremap <leader>i :action Back<CR>
" 前进
nnoremap <leader>o :action Forward<CR>

" ========== actions ==========
nnoremap <leader>a :action GotoAction<CR>

nnoremap == :action ReformatCode<CR>

vnoremap = :action ReformatCode<CR>

nnoremap <leader>l :action ReformatCode<CR>

" comment 单行注释
nnoremap cc :action CommentByLineComment<CR>
vnoremap cc :action CommentByLineComment<CR>

" 重命名
nnoremap R :action RenameElement<CR>
nnoremap gr :action RenameElement<CR>

" 类似原来的 ctrl + alt + b
nnoremap gi :action GotoImplementation<CR>

" 类的声明
nnoremap gd :action GotoDeclaration<CR>

" 全局查找内容
nnoremap <leader>f :action FindInPath<CR>

" 查找类
nnoremap <leader>n :action GotoClass<CR>

" SearchEverywhere
nnoremap <leader>e :action SearchEverywhere<CR>

" 文件结构
nnoremap <leader>s :action FileStructurePopup<CR>

" 查找使用
nnoremap U :action FindUsages<CR>
